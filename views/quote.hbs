<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="../public/stylesheets/index_style.css" />
</head>

<div class="container">
<h2>{{title}}</h2>

<br>

<!--*** display a welcome message with the authenticated users name ***-->
{{#if username}}
    <p>Hello {{username}}, welcome.</p>
{{/if}}
<br>

<!--*** add a quote request section ***-->
<div class="add-quote">
    <h3>Add a New Quote Request</h3>
    <form id="addQuote" action="/add" method="post">
        <input id="quote-name" name="quoteName" placeholder="enter name"><br>
        <input id="description" name="description" placeholder="enter request description"><br>
        <input id="quote-budget" name="budget" placeholder="enter budget"><br>
        <input id= "userIdString" type="hidden" name="user_id" value="{{userID}}"><br><!--hidden field that passes the logged in user's ID to body request-->
        <input id="add-quote-btn" name="add" type="submit" value="add" class="btn btn-success">
    </form>
</div>

<br>
<br>

<!--*** view a list of submitted quote requests ***-->
<h3>Submitted Quote Requests</h3>
<div id="quote-list">

    {{#if quotes}}

        <ul id="quote-list">
            {{#each quotes}}
                <li>
                    <h3>{{this.name}}</h3><strong>request date:</strong> {{this.quoteDate}} <br><strong>active status:</strong> {{this.status}}
                     <form class="deactivate-form" action="/deactivate" method="post">
                        <input class="btn btn-danger" type="submit" name="deactivate" value="deactivate">
                        <input type="hidden" name="_id" value="{{this._id}}">
                    </form>
                </li>
            {{/each}}
        </ul>

    {{else}}

        <p>You do not have any active quote requests.</p>

    {{/if}}
    <br>
    <br>
    <br>
    <button onclick="window.location.href='/deactivated'" class="btn btn-default">View Inactive Requests</button>


</div>

<br>
<br>


<!--*** log out link ***-->
<a href="/logout">Log out</a>

</div>