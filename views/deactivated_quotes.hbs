<div class="container">

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" style="font-size:1.5em;">James Houck Consulting: Quote Manager</a>
            </div>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout">Log Out</a></li>
            </ul>
        </div>
    </nav>
    <br>

    <div class="row">
        <div class="col-sm-12">

            <h3>Deactivated Quote Requests</h3>

            <br>

            {{#if quotes}}

                <table class="table table-dark">
                    <thead>
                    <tr>
                        <th scope="col">Request Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Request Date</th>
                        <th scope="col">Budget</th>
                    </tr>
                    </thead>
                    <tbody>

                    {{#each quotes}}

                    <tr>
                        <th scope="row">{{this.name}}</th>
                        <td>{{this.description}}</td>
                        <td>{{this.quoteDate}}</td>
                        <td>${{this.budget}}.00</td>
                    </tr>

                    {{/each}}

                    </tbody>
                </table>

            {{else}}

                <p>No inactive quotes currently exist.</p>

            {{/if}}

            <br>
            <br>
            <br>
            <button onclick="window.location.href='/quote'" class="btn btn-primary">Back to Active Quotes</button>

        </div>

    </div>

</div>



